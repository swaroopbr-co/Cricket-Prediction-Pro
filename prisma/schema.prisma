// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("USER") // ADMIN, SUB_ADMIN, USER
  isApproved Boolean @default(false)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  predictions Prediction[]
  ownedRooms  Room[]       @relation("RoomOwner")
  joinedRooms RoomMember[]
  pollVotes   PollVote[]
  notifications Notification[]
}

model Tournament {
  id        String   @id @default(uuid())
  name      String
  type      String   // T20, ODI, TEST
  format    String   @default("LEAGUE") // LEAGUE, BILATERAL
  startDate DateTime
  endDate   DateTime
  locked    Boolean  @default(false)
  winner    String?  // Final Winner of the Tournament
  
  matches   Match[]
  predictions Prediction[]
  polls     Poll[]
  teams     Team[]
}

model Team {
  id          String       @id @default(uuid())
  name        String       @unique
  shortName   String?
  logo        String?     // URL or Path
  tournaments Tournament[]
}

model Match {
  id             String      @id @default(uuid())
  number         Int?        // Match number (1, 2, 3...)
  tournamentId   String
  tournament     Tournament  @relation(fields: [tournamentId], references: [id])
  teamA          String
  teamB          String
  date           DateTime    // Start time of the match (toss is usually 30m before)
  status         String      // SCHEDULED, LIVE, COMPLETED, ABANDONED
  tossWinner     String?
  matchWinner    String?     // 'DRAW' or 'TIE' or Team Name
  result         String?     // Detailed result
  
  predictions    Prediction[]
}

model Room {
  id        String       @id @default(uuid())
  name      String
  adminId   String
  admin     User         @relation("RoomOwner", fields: [adminId], references: [id])
  members   RoomMember[]
  createdAt DateTime     @default(now())
  type      String       @default("PUBLIC") // PUBLIC, PRIVATE, REQUEST
}

model RoomMember {
  id        String   @id @default(uuid())
  roomId    String
  userId    String
  joinedAt  DateTime @default(now())
  isApproved Boolean @default(false) 

  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
}

model Poll {
  id           String       @id @default(uuid())
  question     String
  tournamentId String?
  tournament   Tournament?  @relation(fields: [tournamentId], references: [id])
  options      PollOption[]
  votes        PollVote[]
  isActive     Boolean      @default(true) // Can be closed manually
  createdAt    DateTime     @default(now())
}

model PollOption {
  id        String     @id @default(uuid())
  text      String
  pollId    String
  poll      Poll       @relation(fields: [pollId], references: [id])
  votes     PollVote[]
}

model PollVote {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  pollId    String
  poll      Poll       @relation(fields: [pollId], references: [id])
  optionId  String
  option    PollOption @relation(fields: [optionId], references: [id])
  
  @@unique([userId, pollId])
}

model Prediction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  // Can be linked to a Match OR a Tournament (for winner)
  matchId     String?
  match       Match?   @relation(fields: [matchId], references: [id])
  
  tournamentId String?
  tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  
  tossPick    String?
  matchPick   String?  // The team predicted to win (or 'DRAW'/'TIE'?) - usually team name
  
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, matchId])
  @@unique([userId, tournamentId]) // Only one winner prediction per tournament
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   // Recipient
  user      User     @relation(fields: [userId], references: [id])
  type      String   // INFO, WARNING, SUCCESS, VOTE_REQUEST
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  metadata  String?  // JSON string for extra data (e.g. { matchId, tournamentId, requesterId })
}
